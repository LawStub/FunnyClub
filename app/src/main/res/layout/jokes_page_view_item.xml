<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/funny_page_item_roud_bg">
    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/funny_page_item_roud_bg"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <ImageView
                android:src="@mipmap/spongebob_squarepants"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/joke_title"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/joke_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>
        <!--底部4个按钮功能栏-->
        <LinearLayout
            android:id="@+id/joke_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bottom_bar_color_gray_white"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true">
            <LinearLayout
                android:id="@+id/joke_like"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/joke_like_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:src="@mipmap/like"/>
                    <TextView
                        android:id="@+id/joke_plus_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1"
                        android:textSize="15sp"
                        android:textColor="@color/gold"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal|center_vertical"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/joke_like_count"
                    android:padding="5dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:id="@+id/joke_unlike"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@mipmap/unlike"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:padding="5dp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:id="@+id/joke_store"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:id="@+id/joke_store_image"
                    android:layout_width="@dimen/store_image_size"
                    android:layout_height="@dimen/store_image_size"
                    android:src="@mipmap/store"/>
            </LinearLayout>
            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:id="@+id/joke_comment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal">
                <ImageView
                    android:src="@mipmap/comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>